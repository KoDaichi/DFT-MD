Control{
        condition = initial
        cpumax = 1 day ! maximum cpu time
	max_iteration = 6000
        sw_vdw_correction = on
}

accuracy{
	cutoff_wf =   25.00  rydberg
	cutoff_cd =  225.00  rydberg
        ksampling{
          method = gamma
        }
        initial_charge_density = atomic_charge_density
        num_bands = 48
        vdw_method = dft-d3
        force_convergence{
          max_force = 2e-4
        }
}

