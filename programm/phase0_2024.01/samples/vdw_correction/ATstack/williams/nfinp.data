!! Adenine-Thymine stacking DFT+vdW
control{
        condition = initial
	max_iteration = 60000
        sw_vdw_correction = on
}

accuracy{
	cutoff_wf =  30.00  rydberg  ! cke_wf
	cutoff_cd = 230.00  rydberg  ! cke_cd
	num_bands = 72
	initial_wavefunctions = atomic_orbitals
	initial_charge_density = atomic_charge_density
        ksampling{
	  method = gamma
        }
        smearing{
                method = parabolic ! {parabolic|tetrahedral}
                width  = 0.002 hartree
        }
        scf_convergence{
          delta_total_energy = 1.0e-9
        }
        force_convergence{
	  max_force = 5.0e-4
	}
	vdw_method = williams
	vdw_radius = 20.0
	vdw_scaling_factor = 0.8095
	vdw_scaling_factor_r = 0.8
	vdw_damping_factor = 3.0
}

