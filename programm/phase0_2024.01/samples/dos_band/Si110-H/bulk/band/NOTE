TOOLS_DIR=../../../../tools

$TOOLS_DIR/band_kpoint.pl bandkpt.in -outfile=kpoint.data -zdiv=50 -zshift=0

python3 $TOOLS_DIR/surface_projected_bulk_band.py nfenergy.data bandkpt.in --e_range -2 2 --e_inc 0.5 --fig_format png  --plot_style 1
cp energy_band.png energy_band_style1.png

python3 $TOOLS_DIR/surface_projected_bulk_band.py nfenergy.data bandkpt.in --e_range -2 2 --e_inc 0.5 --fig_format png  --plot_style 2 --line_width 2 --window_scale 0.8 1.0 --with_fermi
cp energy_band.png energy_band_style2.png



