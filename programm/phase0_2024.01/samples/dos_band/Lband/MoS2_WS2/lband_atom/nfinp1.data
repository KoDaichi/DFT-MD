S     0.666666666666666852  0.333333333333333370  0.376755550588192156 1 
S     0.333333333333333315  0.666666666666666741  0.623054822874977710 1 
W     0.666666666666666852  0.333333333333333370  0.749999999999999778 3 
S     0.333333333333333315  0.666666666666666741  0.876945177125022290 1 
        }
    }
    element_list{
        #tag element atomicnumber
                 Mo    42
                 W     74
                 S     16
    }
    unit_cell_type = Bravais
    unit_cell{
  a     =     6.106894987854 , b    =     6.106894987854 ,  c     =    23.465190625369
  alpha =    90.0, beta =    90.0,  gamma =   120.0
    }
    symmetry{
        method = automatic
        tspace{
            lattice_system = hexagonal
        }
