control{
    condition = fixed_charge
!    sw_vdw_correction = on
        fixed_charge_option{
          kparallel = one_by_one
        }
}
accuracy{
    cutoff_wf = 25 Rydberg
    cutoff_cd = 225 Rydberg

    ksampling{
        method = file
    }
    num_bands = 60
    scf_convergence{
        delta_total_energy = 1.0E-8 Hartree
    }
    force_convergence{
        max_force = 2.0E-4 Hartree/Bohr
    }
    smearing{
           method = parabolic ! {parabolic|tetrahedral}
           width  = 0.05 eV
    }
!    paw = on
    initial_wavefunctions = atomic_orbitals
    initial_charge_density = atomic_charge_density

!    vdw_method = grimme

    projector_list{
        projectors{
            #tag no group l radius
                 1    1   0   1.6
                 2    1   1   1.8
                 3    2   0   2.0
                 4    2   1   2.0
                 5    2   2   2.4
                 6    3   0   2.0
                 7    3   1   2.0
                 8    3   2   2.4
        }
    }
}
structure{
    atom_list{
        atoms{
            #tag element rx ry rz proj_group 
S     0.666666666666666852  0.333333333333333370  0.123244449411807913 1 
