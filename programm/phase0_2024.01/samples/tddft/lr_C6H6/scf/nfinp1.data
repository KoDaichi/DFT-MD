control{
    condition = initial
    cpumax = 400 hour
    max_iteration = 1000000
!!!    use_additional_projector=on
}
accuracy{
!     base_reduction_for_GAMMA = on
!     base_symmetrization_for_GAMMA =on
    ksampling{
        method = gamma
    }
    cutoff_wf = 20 Rydberg
    cutoff_cd = 180 Rydberg
!
    scf_convergence{
!        delta_total_energy = 1.0E-7 Hartree
        delta_total_energy = 1.0E-8 Hartree
        succession = 3
    }
    num_bands = 20
      smearing{
                method = parabolic ! {parabolic|tetrahedral}
                width  = 0.002 hartree
        }
     initial_wavefunctions = gaussian
!     initial_charge_density = atomic_charge
}
structure{
    atom_list{
        coordinate_system = cartesian ! {internal|cartesian}
        atoms{
         #tag element rx ry rz 
