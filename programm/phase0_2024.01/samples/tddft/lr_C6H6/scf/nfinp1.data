H -0.2808037956343801E-04 -0.4741463101449146E+01 -0.2207192812082523E-13
        }
    }
    element_list{
        #units atomic_mass
        #tag element atomicnumber mass zeta deviation
         C   6  12.000  0.0 1.5
         H   1  1.00    0.0 0.0
    }
    unit_cell_type = primitive
    unit_cell{
       #units angstrom
        a_vector =  12.00 0.0 0.0
        b_vector =  0.0  12.0 0.0
        c_vector =  0.0  0.0  8.00
    }
    symmetry{
           method = manual
           tspace{
              lattice_system = primitive
              generators {
                #tag rotation tx  ty  tz
                      E         0   0   0
               }
           }
        }
}
printoutlevel{
    base = 1
    parallel_debug = 0
}
postprocessing{
   charge{
        title = ""
        sw_charge_rspace = on
        filetype = cube
    }
   stm{
     sw_stm = on
     sw_deficit_charge = on
   }
}
