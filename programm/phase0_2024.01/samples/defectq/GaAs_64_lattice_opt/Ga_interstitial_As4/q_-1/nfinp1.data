postprocessing{
    electrostatic_potential{
       sw_write_electrostatic_pot = on
       format = cube
       unit = Rydberg
    }
    charged_defect{
        correction{
            sw_calc_extfnv_correction = on
            dielectric_constant{
!https://www.microwaves101.com/encyclopedias/gallium-arsenide
               exx = 12.88
               eyy = 12.88
               ezz = 12.88
